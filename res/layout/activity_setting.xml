<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FAEBD7"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/main_title_bar"
        android:orientation="horizontal" >

        <!-- 菜单 -->

        <Button
            android:id="@+id/butMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_menu"
            android:gravity="center_vertical"
            android:textColor="#FF8C00"
            android:textSize="14sp" />

        <Button
            android:id="@+id/butMy"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/transparent"
            android:gravity="center_vertical"
            android:text="选项"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="20dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="友情提示：\n\t您可以修改头像，密码。\n\t只需填写自己想要修改的选项"
            android:textColor="@color/black" />
        <!-- 修改头像 -->

        <ImageView
            android:id="@+id/butChooseHeadPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:src="@drawable/default_head_photo" />
        <!-- 注册账号 -->

        <EditText
            android:id="@+id/etAccount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" >
        </EditText>
        <!-- 修改密码 -->

        <EditText
            android:id="@+id/etPassword1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="输入旧密码"
            android:inputType="textPassword" >
        </EditText>

        <!-- 修改为新密码 -->

        <EditText
            android:id="@+id/etPassword2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="输入新密码："
            android:inputType="textPassword" >
        </EditText>
         <!-- 确认新密码 -->

        <EditText
            android:id="@+id/corfimPassword2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="确认新密码："
            android:inputType="textPassword" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="50dp"
        android:paddingRight="50dp" >

        <!-- 修改按钮 -->

        <Button
            android:id="@+id/butAlter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_big"
            android:text="确认修改"
            android:textColor="@color/red"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>